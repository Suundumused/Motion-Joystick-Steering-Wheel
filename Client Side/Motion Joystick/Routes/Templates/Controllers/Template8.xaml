<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"  
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"  
            xmlns:binaries="clr-namespace:Motion_Joystick.Source.Joystick.KeysAxis.Binaries"  
            xmlns:Axis="clr-namespace:Motion_Joystick.Source.Joystick.KeysAxes.Axes"  
            Shell.NavBarIsVisible="False"  
            xmlns:mtk="clr-namespace:MemoryToolkit.Maui;assembly=MemoryToolkit.Maui"  
            mtk:TearDownBehavior.Cascade="True"  
            x:Class="Motion_Joystick.Routes.Templates.Controllers.Template8"  
            Title="Template8">

    <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,*,Auto" IgnoreSafeArea="True" Margin="5,0,0,0" x:Name="Parent">  

       <binaries:Left_Shoulder Rotation="-90" Grid.Row="0" Grid.Column="1" VerticalOptions="Start" HorizontalOptions="End"/>
       <binaries:LeftBinaries Grid.Row="0" Grid.Column="0" HorizontalOptions="Start" VerticalOptions="Center" Margin="0,5,0,5"/>

       <binaries:Pause_Select Grid.Column="2" Grid.Row="1" Rotation="0" VerticalOptions="Center"/>
       <binaries:AX_Only Grid.Row="1" Grid.Column="0" Margin="0,0,0,5"/>

       <Axis:NewComboThumbstick Grid.Row="2"  Grid.Column="0" HorizontalOptions="Fill" VerticalOptions="Fill" Margin="0,0,5,5"/>
       <binaries:Right_Shoulder Grid.Row="2"  Grid.Column="1" HorizontalOptions="End" VerticalOptions="End"/>  
   </Grid>  
</ContentPage>