<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Motion_Joystick.Source.Joystick.KeysAxes.Axes.RightDirectional"
             x:Name="JoystickContainer">

    <Grid>
        <Ellipse x:Name="JoystickArea"
                 AnchorX="0.5"
                 AnchorY="0.5"
                 Fill="DarkCyan"
                 Stroke="Beige"
                 StrokeThickness="3"
                 HorizontalOptions="Center"
                 VerticalOptions="Center">
            <Ellipse.GestureRecognizers>
                <PanGestureRecognizer PanUpdated="OnPanUpdated" />
            </Ellipse.GestureRecognizers>
        </Ellipse>

        <Ellipse x:Name="AnalogImage"
                 AnchorX="0.5"
                 AnchorY="0.5"
                 Fill="DarkSlateGray"
                 Stroke="Pink"
                 StrokeThickness="3"
                 HorizontalOptions="Center"
                 VerticalOptions="Center">
        </Ellipse>
    </Grid>

</ContentView>