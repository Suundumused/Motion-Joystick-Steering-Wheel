<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Motion_Joystick.Source.Joystick.KeysAxes.Axes.NewComboThumbstick">
    <Grid x:Name="MainTable">
        <Rectangle x:Name="JoystickArea"
         AnchorX="0.5"
         AnchorY="0.5"
         RadiusX="33"
         RadiusY="33"
         Fill="Crimson"
         Stroke="Beige"
         StrokeThickness="3">
            <Rectangle.GestureRecognizers>
                <PanGestureRecognizer PanUpdated="OnPanUpdated"/>
            </Rectangle.GestureRecognizers>
        </Rectangle>

        <Ellipse
            x:Name="AnalogImage"
            AnchorX="0.5"
            AnchorY="0.5"
            Fill="DarkSlateGray"
            Stroke="Beige"
            StrokeThickness="3"
            HorizontalOptions="Center"
            VerticalOptions="Center">
        </Ellipse>
    </Grid>
</ContentView>
