<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Motion_Joystick.Source.Joystick.KeysAxes.Binaries.DownUp_Only">

    <Border BackgroundColor="#53544c" Margin="0" StrokeShape="RoundRectangle 32" Stroke="Beige" StrokeThickness="3">
        <Grid ColumnDefinitions="*,*" RowDefinitions="*">
            <Button x:Name="Down" Pressed="Down_Pressed" Released="Down_Released" BackgroundColor="Coral"
                    Grid.Column="0" CornerRadius="0" />
            <Label Text="&lt;&lt;" FontSize="48" Grid.Row="0" Grid.Column="0" TextColor="DarkSlateGrey"
                   HorizontalOptions="Center" VerticalOptions="Center" />
            <Button x:Name="Up" Pressed="Up_Pressed" Released="Up_Released" BackgroundColor="Cyan" Grid.Column="1"
                    CornerRadius="0" />
            <Label Text=">>" FontSize="48" Grid.Row="0" Grid.Column="1" TextColor="DarkSlateGrey"
                   HorizontalOptions="Center" VerticalOptions="Center" />
        </Grid>
    </Border>
</ContentView>