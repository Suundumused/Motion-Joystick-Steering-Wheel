<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"  
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"  
            x:Class="Motion_Joystick.Source.Joystick.KeysAxis.Binaries.LeftBinaries">

    <AbsoluteLayout x:Name="MainTable" SizeChanged="MainTable_SizeChanged" Rotation="90" AnchorX="0.5" AnchorY="0.5">
        <Ellipse
            x:Name="MyEllipse"
            AnchorX="0.5"
            AnchorY="0.5"
            Fill="IndianRed"
            Stroke="Beige"
            StrokeThickness="3"
            HorizontalOptions="Center"
            VerticalOptions="Center">
        </Ellipse>

        <Grid RowDefinitions="Auto,Auto,Auto,Auto" ColumnDefinitions="Auto, Auto, Auto, Auto">

            <Button x:Name="Down"  Text="&gt;&gt;" Grid.Column="1" Grid.Row="2" Pressed="Down_Pressed"  Released="Down_Released" Rotation="90" FontAttributes="Bold" VerticalOptions="Center" HorizontalOptions="Center" Background="Yellow" TextColor="#3b3b3b"/>
            <Button x:Name="Left"  Text="&lt;&lt;" Grid.Column="0" Grid.Row="1" Pressed="Left_Pressed"  Released="Left_Released" FontAttributes="Bold" VerticalOptions="Center" HorizontalOptions="Center" Background="Yellow" TextColor="#3b3b3b"/>
            <Button x:Name="Up"    Text="&gt;&gt;" Grid.Column="1" Grid.Row="0" Pressed="Up_Pressed"    Released="Up_Released" Rotation="-90" FontAttributes="Bold" VerticalOptions="Center" HorizontalOptions="Center" Background="Yellow" TextColor="#3b3b3b"/>
            <Button x:Name="Right" Text="&gt;&gt;" Grid.Column="2" Grid.Row="1" Pressed="Right_Pressed" Released="Right_Released" FontAttributes="Bold" VerticalOptions="Center" HorizontalOptions="Center" Background="Yellow" TextColor="#3b3b3b"/>
        </Grid>
    </AbsoluteLayout>  
</ContentView>
