<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Motion_Joystick.Source.Joystick.KeysAxis.Binaries.AX_Only">

    <Border BackgroundColor="#53544c" Margin="0" StrokeShape="RoundRectangle 32" Stroke="Beige" StrokeThickness="3">
        <Grid ColumnDefinitions="*,*" RowDefinitions="*">
            <ImageButton x:Name="A" Source="a.png" Pressed="A_Pressed" Released="A_Released" BackgroundColor="LightGreen" Grid.Column="0" CornerRadius="0" />
            <ImageButton x:Name="X" Source="x.png" Pressed="X_Pressed" Released="X_Released" BackgroundColor="LightBlue" Grid.Column="1" CornerRadius="0" />
        </Grid>
    </Border>
</ContentView>
