<?xml version="1.0" encoding="UTF-8"?>

<Shell
    x:Class="Motion_Joystick.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Motion_Joystick"
    xmlns:lang="clr-namespace:Motion_Joystick.Resources.Languages"
    FlyoutBackgroundColor="Wheat"
    Title="Motion_Joystick">

    <ShellContent
        Title="{x:Static lang:AppResources.Home}"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <FlyoutItem Title="{x:Static lang:AppResources.Templates}">
        <ShellContent
            Title="{x:Static lang:AppResources.Templates}"
            ContentTemplate="{DataTemplate local:Routes.Templates.TemplatesList}" />
    </FlyoutItem>

    <FlyoutItem Title="{x:Static lang:AppResources.Settings}">
        <ShellContent
            Title="{x:Static lang:AppResources.Settings}"
            Route="MySettings"
            ContentTemplate="{DataTemplate local:Routes.Settings.MySettings}" />
    </FlyoutItem>

    <FlyoutItem Title=" " IsEnabled="False">
        <ShellContent
            Title=" " />
    </FlyoutItem>

    <FlyoutItem Title="{x:Static lang:AppResources.About}">
        <ShellContent
            Title="{x:Static lang:AppResources.About}"
            ContentTemplate="{DataTemplate local:MainPage}" />
    </FlyoutItem>
</Shell>